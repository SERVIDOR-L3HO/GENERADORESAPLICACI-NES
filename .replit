entrypoint = "main.sh"
modules = ["bash", "nodejs-20"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["bash", "main.sh"]
deploymentTarget = "cloudrun"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build APK"

[[workflows.workflow]]
name = "Build APK"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"chmod +x build-apk.sh && ./build-apk.sh\""

[workflows.workflow.metadata]
outputType = "console"
